{
  "name": "ssr-template",
  "type": "module",
  "author": "WangRuiJin <1361572192@qq.com>",
  "repository": "git@gitee.com:jh_shot/ssr-template.git",
  "license": "MulanPSL2",
  "scripts": {
    "dev": "nuxi dev --host",
    "build": "nuxi build",
    "start": "node .output/server/index.mjs",
    "scripts": "tsx scripts",
    "upgrade": "nuxi upgrade --force",
    "lint:js": "eslint \"**/*.{ts,tsx,vue}\" --fix",
    "lint:css": "stylelint \"**/*.{css,vue}\" --fix",
    "check": "nuxi typecheck",
    "commit": "git add . && git cz",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@iconify/vue": "4.1.2",
    "@vueuse/core": "10.11.0",
    "element-plus": "2.7.7",
    "lodash-unified": "^1.0.3",
    "pinia": "2.1.7",
    "vue": "3.4.33",
    "vue-router": "4.4.0",
    "vue-types": "5.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@iconify/tools": "^4.0.4",
    "@iconify/types": "^2.0.0",
    "@inquirer/checkbox": "^2.4.1",
    "@nuxt/devtools": "^1.3.9",
    "@nuxtjs/color-mode": "^3.4.2",
    "@pinia/nuxt": "^0.5.1",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vueuse/nuxt": "^10.11.0",
    "chalk": "^5.3.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-customizable": "^7.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^9.27.0",
    "figures": "^6.1.0",
    "globby": "^14.0.2",
    "lint-staged": "^15.2.7",
    "nuxt": "^3.12.4",
    "postcss": "^8.4.39",
    "postcss-html": "^1.7.0",
    "postcss-nested": "^6.2.0",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "unplugin-vue-components": "^0.27.3",
    "vite": "^5.3.4",
    "vue-types-nuxt": "^2.0.3"
  },
  "browserslist": [
    "defaults",
    "not ie 11"
  ],
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,vue}": [
      "stylelint --fix --allow-empty-input",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
