{
  "name": "ssr-template",
  "type": "module",
  "author": "WangRuiJin <1361572192@qq.com>",
  "repository": "git@gitee.com:jh_shot/ssr-template.git",
  "license": "MulanPSL2",
  "scripts": {
    "dev": "nuxi dev --host",
    "build": "nuxi build",
    "start": "node .output/server/index.mjs",
    "scripts": "tsx scripts",
    "upgrade": "nuxi upgrade --force",
    "check": "nuxi typecheck",
    "lint": "biome check --apply .",
    "lint:style": "stylelint \"**/*.{css,vue}\" --fix",
    "commit": "git add . && git cz",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@iconify/vue": "4.1.1",
    "@pinia/nuxt": "0.5.1",
    "@vueuse/core": "10.9.0",
    "@vueuse/nuxt": "10.9.0",
    "element-plus": "2.6.3",
    "lodash-unified": "^1.0.3",
    "nuxt": "3.11.2",
    "pinia": "2.1.7",
    "vue": "3.4.21",
    "vue-router": "4.3.0",
    "vue-types-nuxt": "2.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@iconify/tools": "^4.0.4",
    "@iconify/types": "^2.0.0",
    "@inquirer/checkbox": "^2.2.2",
    "@nuxt/devtools": "^1.1.5",
    "chalk": "^5.3.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-customizable": "^7.0.0",
    "figures": "^6.1.0",
    "globby": "^14.0.1",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "postcss-html": "^1.6.0",
    "postcss-nested": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-prettier": "^5.0.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.2.8"
  },
  "browserslist": [
    "defaults",
    "not ie 11"
  ],
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "biome check --files-ignore-unknown=true"
    ],
    "*.{css,vue}": [
      "stylelint --max-warnings 0"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
