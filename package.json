{
  "name": "ssr-template",
  "author": "WangRuiJin <1361572192@qq.com>",
  "repository": "git@gitee.com:jh_shot/ssr-template.git",
  "license": "MulanPSL2",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "start": "node .output/server/index.mjs",
    "gen:icons": "tsx scripts/genIcons.mts",
    "lint": "concurrently \"npm:lint:*\"",
    "lint:script": "eslint \"./src/**/*.{ts,vue}\" --fix",
    "lint:style": "stylelint \"./src/**/*.{css,scss,vue}\" --fix",
    "commit": "git add . && git cz",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@iconify/vue": "^4.1.1",
    "@pinia/nuxt": "^0.4.11",
    "@vueuse/core": "^10.2.0",
    "@vueuse/head": "^1.1.26",
    "@vueuse/nuxt": "^10.2.0",
    "element-plus": "^2.3.7",
    "pinia": "^2.1.4",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@element-plus/nuxt": "^1.0.5",
    "@iconify/tools": "^3.0.2",
    "@ttou/define-config": "^3.0.0",
    "@types/fs-extra": "^11.0.1",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.15.0",
    "fs-extra": "^11.1.1",
    "globby": "^13.2.0",
    "lint-staged": "^13.2.2",
    "nuxt": "^3.6.5",
    "nuxt-lodash": "^2.5.0",
    "postcss": "^8.4.24",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^3.0.0",
    "sass": "^1.63.5",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "vite-plugin-eslint2": "^3.3.0",
    "vite-plugin-stylelint": "^4.3.0"
  },
  "browserslist": [
    "defaults",
    "not ie 11"
  ],
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  }
}
